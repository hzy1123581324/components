<!--components/linklist/index.wxml-->
<view class="linkList fs{{fontSize}}" wx:for="{{list}}" wx:key="path">
    <navigator url="{{item.path}}" hover-class="none" openType="{{item.openType|| 'navigate'}}" class="link-item pad_lf_rg_30 h{{linkHeight}} bor_btm">
      <view>{{item.name}}</view>
      <text class="next size{{iconSize}}"></text>
    </navigator>
</view>