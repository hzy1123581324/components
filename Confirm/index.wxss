/* components/Confirm/index.wxss */

.Confirm-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(51, 51, 51, 0.7);
  z-index: 999999999999999;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 1;
}

.Confirm-main {
  min-width: 500rpx;
  /* max-width: 40%;
  max-height: 20%; */
  padding: 0 30rpx;
  animation: zoom-in 0.15s ease forwards;
}

.confirmTitle {
  font-size:28rpx;
  line-height: 72rpx;
  height: 72rpx;
  text-align: center;
  font-weight: bold;
  background-color: #fff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.Confirm-body {
  min-height: 50rpx;
  background-color: #fff;
  padding: 30rpx;
  font-size: 28rpx;
  text-align: center;
}

.confirmFoot {
  display: flex;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 0 1rpx 1rpx rgba(51, 51, 51, 0.5);
}
.confirmFootBtn {
  flex-grow: 1;
  width: 50%;
  flex-shrink: 0;
  line-height: 66rpx;
  height: 66rpx;
  text-align: center;
  background-color: #fff;
  position: relative;
}
.confirmFootBtn::before {
  content: "";
  width: 1rpx;
  height: 100%;
  background-color: rgba(51, 51, 51, 0.5);
  position: absolute;
  left: 0;
  top: 0;
}
@-webkit-keyframes zoom-in {
  0% {
    opacity: 0;
    -webkit-transform: scale3d(0.3, 0.3, 0.3);
    transform: scale3d(0.3, 0.3, 0.3);
  }
  50% {
    opacity: 1;
  }
}
@keyframes zoom-in {
  0% {
    opacity: 0;
    -webkit-transform: scale3d(0.3, 0.3, 0.3);
    transform: scale3d(0.3, 0.3, 0.3);
  }
  50% {
    opacity: 1;
  }
}